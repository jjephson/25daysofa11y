---
import QuotePage from '../components/QuotePage.astro';

const day = 11;
const quote = "Inclusive design leads to better products and happier users.";
const explanation = "When products are designed with inclusion in mind, they naturally become more usable, intuitive, and satisfying for all users. This leads to higher user satisfaction, better reviews, and stronger customer loyalty.";
const businessImpact = "Better products mean higher user satisfaction, increased customer retention, and positive word-of-mouth marketing. Inclusive design often results in products that exceed user expectations and create competitive advantages.";
const actionItems = [
  "Measure user satisfaction before and after accessibility improvements",
  "Gather feedback from diverse user groups to identify improvement opportunities",
  "Focus on creating delightful experiences for all users, not just meeting minimum requirements",
  "Celebrate accessibility wins that lead to happier users"
];
---

<QuotePage 
  {day}
  {quote}
  {explanation}
  {businessImpact}
  {actionItems}
/>
