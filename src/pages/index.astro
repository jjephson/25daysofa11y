    color: white;
    text-shadow: 2px 2px 0px;
    position: relative;
    z-index: 2;
  }
  
  .diamond-card.red .number-text {
    text-shadow: 2px 2px 0px #7f1d1d;
  }
  
  .diamond-card.green .number-text {
    text-shadow: 2px 2px 0px #14532d;
  }
  
  .diamond-card.yellow .number-text {
