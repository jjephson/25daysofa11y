---
export interface Props {
  title: string;
  description?: string;
}

const { title, description = "25 Days of A11y - Learning accessibility one day at a time" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <header>
      <nav>
        <a href="/">25 Days of A11y</a>
      </nav>
    </header>
    <main>
      <slot />
    </main>
  </body>
</html>

<style>
  html {
    font-family: system-ui, sans-serif;
  }
  
  body {
    margin: 0;
    padding: 0;
    line-height: 1.6;
    color: #2c3e50;
    transition: background-color 0.3s ease, color 0.3s ease;
  }
  
  @media (prefers-color-scheme: dark) {
    body {
      background-color: #1a1a1a;
      color: #e9ecef;
    }
  }
  
  header {
    background: linear-gradient(135deg, #dc2626 0%, #16a34a 50%, #dc2626 100%);
    padding: 1.5rem;
    border-bottom: 3px solid #fbbf24;
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    position: relative;
    overflow: hidden;
  }
  
  header::before {
    content: 'üéÑ';
    position: absolute;
    top: 0.5rem;
    left: 1rem;
    font-size: 1.5rem;
    animation: sparkle 2s ease-in-out infinite;
  }
  
  header::after {
    content: '‚ùÑÔ∏è';
    position: absolute;
    top: 0.5rem;
    right: 1rem;
    font-size: 1.5rem;
    animation: sparkle 2s ease-in-out infinite 1s;
  }
  
  @keyframes sparkle {
    0%, 100% { opacity: 0.7; transform: scale(1); }
    50% { opacity: 1; transform: scale(1.1); }
  }
  
  @media (prefers-color-scheme: dark) {
    header {
      background: linear-gradient(135deg, #b91c1c 0%, #15803d 50%, #b91c1c 100%);
      border-bottom-color: #f59e0b;
    }
  }
  
  nav a {
    text-decoration: none;
    color: white;
    font-weight: bold;
    font-size: 1.5rem;
    text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
    transition: color 0.3s ease;
  }
  
  @media (prefers-color-scheme: dark) {
    nav a {
      color: #fef3c7;
      text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
    }
  }
  
  main {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }
  
</style>
